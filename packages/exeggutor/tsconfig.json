{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es2018",
    "noImplicitReturns": true,
    "strictNullChecks": true,
    "sourceMap": true,
    "esModuleInterop": true,
    "lib": [
      "es6",
      "es7",
    ],
    "allowSyntheticDefaultImports": true,
    "isolatedModules": true,
    "baseUrl": "./",
    "moduleResolution": "node",
    "allowJs": true,
    "rootDir": "src",
    "outDir": "../../dist/exeggutor"
  },
  "exclude": [
    "node_modules",
    "typings/globals"
  ],
}
